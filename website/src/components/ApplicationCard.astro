---
import "../styles/global.css";
import ReferenceList from "./ReferenceList.astro";
import ArrowButton from "./ArrowButton.astro";
const { application } = Astro.props;
---

<div
  class="w-full px-2.5 pb-2.5 my-2 md:my-3 bg-white border border-gray-200 rounded-lg shadow-sm mx-auto"
>
  <a
    href={`/applications/${application.id}/`}
    class="flex justify-between w-full py-2.5 mb-1"
  >
    <h1 class="text-sm md:text-lg font-bold">
      {application.data.title}
    </h1>
    <ArrowButton />
  </a>
  <div class="text-gray-700 mb-3">
    {application.data.summary}
  </div>
  <div class="grid grid-cols-[90px_1fr] md:grid-cols-[102px_1fr] w-full">
    <div class="font-bold mr-1 text-sm md:text-base">Graph type:</div>
    <div class="text-gray-800 text-sm md:text-base">
      {application.data.graph}
    </div>
    <ReferenceList
      references={application.data.references}
      small={true}
      truncate={true}
    />
  </div>
</div>
