---
import "../styles/global.css";
import ReferenceList from "./ReferenceList.astro";
const { application } = Astro.props;
---

<div
  class="mt-3 mb-2 bg-gray-50 dark:bg-gray-600 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm overflow-hidden"
>
  <div class="flex justify-start p-3">
    <a
      href={`/applications/${application.id}/`}
      class="text-sm md:text-lg font-bold max-w-13/16 truncate"
    >
      {application.data.title} ({application.data.graph})
    </a>
  </div>
  <div
    class="flex flex-col justify-between bg-code-bg dark:bg-code-dark-bg h-26 md:h-32 p-3 pt-4 md:pt-5"
  >
    <div
      class="text-sm md:text-base text-gray-700 dark:text-gray-300 mb-2 line-clamp-2 text-pretty hyphens-auto"
    >
      {application.data.summary}
    </div>
    <div class="grid grid-cols-[auto_1fr] md:grid-cols-[auto_1fr] w-full">
      <ReferenceList
        references={application.data.references}
        small={true}
        truncate={true}
      />
    </div>
  </div>
</div>
