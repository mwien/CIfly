---
import "../styles/global.css";
import RightArrowSvg from "./RightArrowSvg.astro";
const { doc } = Astro.props;
---

<div
  class="w-full p-3 my-2 md:my-3 bg-white border border-gray-200 rounded-lg shadow-sm mx-auto"
>
  <a
    href={`/docs/${doc.id}/`}
    class="flex flex-row justify-between w-full mb-2"
  >
    <h1 class="text-sm md:text-lg font-bold">
      {doc.data.title}
    </h1>
    <RightArrowSvg class="hover:text-gray-500 cursor-pointer" />
  </a>
  <div>
    {doc.data.summary}
  </div>
</div>
