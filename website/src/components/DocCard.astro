---
import "../styles/global.css";
import RightArrowSvg from "./RightArrowSvg.astro";
const { doc } = Astro.props;
---

<div
  class="w-full p-3 my-2 md:my-3 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm mx-auto"
>
  <a
    href={`/docs/${doc.id}/`}
    class="flex flex-row justify-between w-full mb-2"
  >
    <h1 class="md:text-lg font-bold">
      {doc.data.title}
    </h1>
    <RightArrowSvg
      class="hover:text-gray-500 dark:hover:text-gray-400 cursor-pointer"
    />
  </a>
  <div>
    {doc.data.summary}
  </div>
</div>
